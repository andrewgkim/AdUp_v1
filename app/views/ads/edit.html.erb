<div class="page-header">
  <h1>Edit Ad #<%= @ad.id %></h1>
</div>

<% if @ad.errors.any? %>
  <% @ad.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_ad/<%= @ad.id %>" class="form-horizontal">
  <!-- Label and input for ad_url -->
  <div class="form-group">
    <label for="ad_url" class="col-sm-2 control-label">
      Ad url
    </label>
    <div class="col-sm-10">
      <input type="text" id="ad_url" name="ad_url" placeholder="Ad url" class="form-control" value="<%= @ad.ad_url %>">
    </div>
  </div>

  <!-- Label and input for cpv -->
  <div class="form-group">
    <label for="cpv" class="col-sm-2 control-label">
      Cpv
    </label>
    <div class="col-sm-10">
      <input type="text" id="cpv" name="cpv" placeholder="Cpv" class="form-control" value="<%= @ad.cpv %>">
    </div>
  </div>

  <!-- Label and input for company -->
  <div class="form-group">
    <label for="company" class="col-sm-2 control-label">
      Company
    </label>
    <div class="col-sm-10">
      <input type="text" id="company" name="company" placeholder="Company" class="form-control" value="<%= @ad.company %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Ad" class="btn btn-primary">
    </div>
  </div>
</form>
