<div class="page-header">
  <h1>Ad views</h1>
</div>

<p><a href="/ad_views/new" class="btn btn-primary">Add a New Ad View</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Ad</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ad_views.each do |ad_view| %>
      <tr>
        <td><%= ad_view.ad_id %></td>
        <td><%= ad_view.user_id %></td>
        <td>
          <a href="/ad_views/<%= ad_view.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/ad_views/<%= ad_view.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_ad_view/<%= ad_view.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

